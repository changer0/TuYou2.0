<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lulu.tuyou.view.MineAboutActivity">

    <include android:id="@+id/common_title" layout="@layout/common_title"/>

    <ImageView
        android:id="@+id/about_iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/common_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_app"/>

    <TextView
        android:id="@+id/about_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_iv_icon"
        android:gravity="center"
        android:text="图友"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/about_tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_tv_name"
        android:gravity="center"
        android:text="0.0.1版"
        android:textColor="#ff0303"
        android:textSize="15sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/about_cv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_tv_version"
        android:layout_marginTop="20dp"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mine_iv_icon"
                android:padding="10dp"
                android:text="常见问题"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/user_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/about_cv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_cv_question"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/about_tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mine_iv_icon"
                android:padding="10dp"
                android:text="版本更新"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/user_iv1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_above="@+id/about_tv_author"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000"
        android:text="后台由Bomb云服务提供"/>

    <TextView
        android:id="@+id/about_tv_author"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016.06"/>

</RelativeLayout>
