<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--主页面下方RadioGroupStyle-->
    <style name="RadioGroupStyle">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/activity_bottom_navigation_height</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/sel_bottom_nav</item>
    </style>
    <!--登录页面的CardView-->
    <style name="login_card_view" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">5dp</item>
    </style>
    <!--注册和登录按钮-->
    <style name="login_register_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/colorApp3</item>
    </style>
    <!--免费注册和清空所有按钮-->
    <style name="login_forget_register_btn">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--注册每个CardView-->
    <style name="register_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">5dp</item>
    </style>
    <!--注册EditText-->
    <style name="register_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--地图页面显示附近的item-->
    <style name="map_item_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">5dp</item>
    </style>
    
    <!--侧滑栏item-->
    <style name="navigation_item">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="navigation_item_text">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/sel_nav</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>


</resources>
